{
  "extends": "@nrsk/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@combinators": ["src/combinators"],
      "@combinators/*": ["src/combinators/*"],
      "@lib": ["src"],
      "@lib/*": ["src/*"],
      "@parsers": ["src/parsers"],
      "@parsers/*": ["src/parsers/*"],
      "@testing": ["src/__tests__/@helpers"],
      "@types": ["src/types"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["dist"]
}
