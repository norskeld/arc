{
  "name": "sigma-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "npm@8.10.0",
  "workspaces": [
    "packages/*",
    "docs",
    "benchmarks"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "fmt:prettier": "prettier --write \"**/*.{js,ts,tsx,json}\"",
    "fmt:lint": "eslint --fix --ext .js,.ts,.tsx .",
    "prepare": "is-ci || husky install",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@nrsk/config-conventional": "^1.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/is-ci": "^3.0.0",
    "@types/node": "^16.11.65",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "@vitest/coverage-istanbul": "^0.24.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-turbo": "^0.0.4",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "tsup": "^6.2.3",
    "tsx": "^3.10.1",
    "turbo": "^1.5.6",
    "typescript": "^4.8.4",
    "vite-tsconfig-paths": "^3.5.1",
    "vitest": "^0.24.1"
  },
  "commitlint": {
    "extends": [
      "@nrsk/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "optionalDependencies": {
    "@next/swc-linux-x64-gnu": "^12.1.6",
    "@next/swc-linux-x64-gnux32": "*",
    "@next/swc-linux-x64-musl": "^12.1.6",
    "turbo-linux-64": "^1.5.6"
  }
}
